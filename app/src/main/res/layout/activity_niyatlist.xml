<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradint"
    tools:context=".Niyatlist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/fozorid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongrdnt"
                android:text="ফজরের নামাজ"
                android:textSize="30sp" />
            <Button
                android:id="@+id/johorerid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongrdnt"
                android:text="জোহরের নামাজ"
                android:textSize="30sp" />
            <Button
                android:id="@+id/asoreniyatid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongrdnt"
                android:text="আছরের নামাজ"
                android:textSize="30sp" />
            <Button
                android:id="@+id/magribid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongrdnt"
                android:textSize="30sp"
                android:text="মাগরিবের নামাজ"/>
            <Button
                android:id="@+id/esaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongrdnt"
                android:textSize="30sp"
                android:text="এশার নামাজ"/>
            <Button
                android:id="@+id/biterid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongrdnt"
                android:textSize="30sp"
                android:text="তিন রাকায়াত বেতের নামাজের নিয়ত"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>